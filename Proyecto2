#Importamos las herramientas necesarias para realizar las gráficas y las operaciones
import matplotlib.pyplot as plt
import numpy as np
from pylab import *

#Funciones necesarias para:
#Inicializar los valores
def initialize():
 global x,y,x_result,y_result,p,d,R
 R = 1       #Recursos
 x = 0.12    #Población inicial de la presa
 y = 0.2     #Población inicial del depredador
 p = 0.2     #Razón de crecimiento de la presa
 d = 0.1     #Razón de crecimiento del depredador 

 x_result = []
 y_result = []

#Definir las fórmulas
def update():
  global x,y,x_result,y_result,p,d,R
  next_x = x + (p*R*x/ (x + y)) #Ecuaciones para las presas
  next_y = y + (d*R*y/ (x + y)) #Ecuaciones para los depredadores
  x = next_x
  y = next_y

#Añadir cada resultado obtenido de update()
def observe():
  global x,y,x_result,y_result,p,d,R
  x_result.append(x)
  y_result.append(y)

#Realizar las fórmulas y almacenar su resultado n veces (50 veces)
initialize()
for step in range(10):
  update()
  observe()

fig1 = plot(x_result, color="r")
fig2 = plot(y_result, color="g")
plt.show()


fig1 = plot(x_result, color="r")
plt.show()

fig2 = plot(y_result, color="g")
plt.show()
